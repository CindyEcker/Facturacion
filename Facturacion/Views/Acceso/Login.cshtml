@model Facturacion.Models.Usuario

@{
    ViewData["Title"] = "Login";
}

<form asp-action="Login">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-horizontal">
        <div class="text-center my-4">
            <h1>Facturacion</h1>
        </div>
        <div class="container w-75 d-block div-bordered">
            <div class="row">
                <div class="col-6 w-50 text-white">
                    <img class="img-acceso w-100 p-5" src="~/img/Facturacion.png" />
                </div>
                <div class="col-6 w-50 bg-secondary text-center p-5">
                    <h2 class="text-white">Iniciar sesión</h2>
                    <br />

                    <div class="form-group">
                        <label asp-for="Nombre_Usuario" class="control-label text-white"></label>
                        <input asp-for="Nombre_Usuario" class="form-control" required />
                        <span asp-validation-for="Nombre_Usuario" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2">
                        <label asp-for="Contraseña" class="control-label text-white"></label>
                        <input asp-for="Contraseña" type="password" class="form-control" required />
                        <span asp-validation-for="Contraseña" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group row mt-4">
        <div class="col-12 text-center">
            <input type="submit" value="Iniciar sesión" class="btn btn-info px-3 py-2 w-75" />
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}