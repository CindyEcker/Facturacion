@model Facturacion.Models.Factura

@{
    ViewData["Title"] = "Details";
}

<h2 class="text-center">Detalles de la factura</h2>

<hr />

<div class="container w-75 d-block div-bordered">
    <section class="p-3">
        <div class="container">
            <div class="card-rounded">
                <div class="card-body">
                    <div class="form-group row mt-2">
                        <div class="col-12 text-center">
                            <h4 class="font-weight-bold mb-3">Datos del vendedor</h4>
                        </div>
                    </div>
                    <hr />

                    <div class="form-group">
                        <label asp-for="ID" class="control-label"></label>
                        <input asp-for="ID" class="form-control" disabled />
                    </div>
                    <div class="form-group">
                        <label asp-for="ID_Vendedor" class="control-label"></label>
                        <input asp-for="Vendedor.Nombre" class="form-control" disabled />
                    </div>
                    <div class="form-group">
                        <label asp-for="ID_Cliente" class="control-label"></label>
                        <input asp-for="Cliente.Nombre_Comercial" class="form-control" disabled />
                    </div>
                    <div class="form-group">
                        <label asp-for="Fecha" class="control-label"></label>
                        <input asp-for="Fecha" class="form-control" disabled />
                    </div>
                    <div class="form-group">
                        <label asp-for="Comentario" class="control-label"></label>
                        <input asp-for="Comentario" class="form-control" disabled />
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="p-3">
        <div class="container">
            <div class="card-rounded">
                <div class="card-body">
                    <div class="form-group row mt-2">
                        <div class="col-12 text-center">
                            <h4 class="font-weight-bold mb-3">Datos del articulo</h4>
                        </div>
                    </div>
                    <hr />

                    <div class="form-group">
                        <label asp-for="ID_Articulo" class="control-label"></label>
                        <input asp-for="Articulo.Descripcion" class="form-control" disabled />
                    </div>
                    <div class="form-group">
                        <label asp-for="Articulo.Precio_Unitario" class="control-label"></label>
                        <input asp-for="Articulo.Precio_Unitario" class="form-control" disabled />
                    </div>
                    <div class="form-group">
                        <label asp-for="Cantidad" class="control-label"></label>
                        <input asp-for="Cantidad" class="form-control" disabled />
                    </div>
                    <div class="form-group">
                        <label asp-for="Monto" class="control-label"></label>
                        <input asp-for="Monto" class="form-control" disabled />
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div class="form-group row mt-4">
        <div class="col-6 text-right">
            <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-info px-3 py-2 w-50">Editar</a>
        </div>

        <div class="col-6 text-left">
            <a class="btn btn-secondary px-3 py-2 w-50" asp-action="Index">Volver atrás</a>
        </div>
    </div>
</div>
