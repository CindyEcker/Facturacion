@model Facturacion.Models.Articulo

@{
    ViewData["Title"] = "Details";
}

<h2 class="text-center">Detalles del artículo</h2>

<hr />

<div class="container w-75 d-block div-bordered">
    <section class="p-3">
        <div class="container">
            <div class="card-rounded">
                <div class="card-body">
                    <div class="form-group row mt-2">
                        <div class="col-12 text-center">
                            <h4 class="font-weight-bold mb-3">Datos del artículo</h4>
                        </div>
                    </div>
                    <hr />

                    <div class="form-group">
                        <label asp-for="Descripcion" class="control-label"></label>
                        <input asp-for="Descripcion" class="form-control" disabled />
                    </div>
                    <div class="form-group">
                        <label asp-for="Precio_Unitario" class="control-label"></label>
                        <input asp-for="Precio_Unitario" class="form-control" disabled />
                    </div>
                    <div class="form-group">
                        <label asp-for="ID_Estado" class="control-label"></label>
                        <select asp-for="ID_Estado" class="form-control" asp-items="ViewBag.ID_Estado" disabled></select>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div class="form-group row mt-4">
        <div class="col-6 text-right">
            <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-info px-3 py-2 w-50">Editar</a>
        </div>

        <div class="col-6 text-left">
            <a class="btn btn-secondary px-3 py-2 w-50" asp-action="Index">Volver atrás</a>
        </div>
    </div>
</div>
