@model IEnumerable<Facturacion.Models.Articulo>

@{
    ViewData["Title"] = "Articulos";
}

<h2 class="text-center">Listado de Artículos</h2>
<div class="well well-sm mb-4"><a class="btn btn-primary px-3" asp-action="Create">Nuevo</a></div>
<table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Precio_Unitario)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Estado)
                </th>
                <th colspan="3">Operaciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Precio_Unitario)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Estado.Descripcion)
                    </td>
                    <td>
                        <a class="btn btn-success mr-2" asp-action="Details" asp-route-id="@item.ID"><span class="fa fa-eye"></span></a>
                        <a class="btn btn-info mr-2" asp-action="Edit" asp-route-id="@item.ID"><span class="fa fa-edit"></span></a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ID"><span class="fa fa-trash"></span></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
