@model Facturacion.Models.Articulo

@{
    ViewData["Title"] = "Edit";
}

<h2 class="text-center">Editar artículo</h2>

<hr />
<div class="container w-75 d-block div-bordered">

    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ID" />

        <section class="p-3">
            <div class="container">
                <div class="card-bordered">
                    <div class="card-body">
                        <div class="form-group row mt-2">
                            <div class="col-12 text-center">
                                <h4 class="font-weight-bold mb-3">Datos del artículo</h4>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Descripcion" class="control-label"></label>
                            <input asp-for="Descripcion" class="form-control" required />
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Precio_Unitario" class="control-label"></label>
                            <input asp-for="Precio_Unitario" type="number" min="1" class="form-control" required />
                            <span asp-validation-for="Precio_Unitario" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Stock" class="control-label"></label>
                            <input asp-for="Stock" type="number" min="0" class="form-control" required />
                            <span asp-validation-for="Stock" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ID_Estado" class="control-label"></label>
                            <select asp-for="ID_Estado" class="form-control" asp-items="ViewBag.ID_Estado"></select>
                            <span asp-validation-for="ID_Estado" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <div class="form-group row mt-4">
            <div class="col-6 text-right">
                <input type="submit" value="Guardar cambios" class="btn btn-success px-3 py-2 w-75" />
            </div>

            <div class="col-6 text-left">
                <a class="btn btn-secondary px-3 py-2 w-75" asp-action="Index">Volver atrás</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
