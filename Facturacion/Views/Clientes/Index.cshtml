@model IEnumerable<Facturacion.Models.Cliente>

@{
    ViewData["Title"] = "Index";
}

<h2 class="text-center">Listado de Clientes</h2>
<div class="well well-sm mb-4"><a class="btn btn-primary px-3" asp-action="Create">Nuevo</a></div>
<table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre_Comercial)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RNC)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Direccion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cuenta_Contable)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telefono)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ID_Estado)
                </th>
                <th colspan="3">Operaciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre_Comercial)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RNC)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Direccion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cuenta_Contable)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefono)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado.Descripcion)
                </td>
                <td class="px-0">
                    <a class="btn btn-success mr-2" asp-action="Details" asp-route-id="@item.Id"><span class="fa fa-eye"></span></a>
                </td>
                <td class="px-0">
                    <a class="btn btn-info mr-2" asp-action="Edit" asp-route-id="@item.Id"><span class="fa fa-edit"></span></a>
                </td>
                <td class="px-0">
                    <a class="btn btn-danger mr-2" asp-action="Delete" asp-route-id="@item.Id"><span class="fa fa-trash"></span></a>
                </td>
            </tr>
            }
        </tbody>
    </table>
